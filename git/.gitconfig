[core]
editor = code --wait
pager = delta
excludesfile = /home/nidzo/.config/dotfiles/git/.gitignore
[interactive]
diffFilter = delta --color-only
[merge]
tool = vscode
[mergetool "vscode"]
cmd = code --wait $MERGED
[diff]
tool = vscode
[difftool "vscode"]
cmd = code --wait --diff $LOCAL $REMOTE
[alias]
lg = log --graph --full-history --all --color --pretty=tformat:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s%x20%x1b[33m(%an)%x1b[0m"
[color "status"]
added = green bold
updated = green bold
changed = green
untracked = cyan bold
branch = yellow black bold ul
[rebase]
autosquash = true
[pull]
	rebase = true
