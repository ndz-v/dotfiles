{
    //  Editor
    "editor.cursorBlinking": "solid",
    "editor.detectIndentation": true,
    "editor.fontSize": 13,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.semanticHighlighting.enabled": true,
    "editor.smoothScrolling": true,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 160,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
    },
    //  Explorer
    "explorer.compactFolders": false,
    //  Files
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.wrapTabs": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.layoutControl.enabled": true,
    "workbench.settings.editor": "json",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "*.pdf": "pdf.preview"
    },
    //  Window
    "window.titleBarStyle": "custom",
    //  Latex Workshop
    // "latex-workshop.latex.build.forceRecipeUsage": false,
    "latex-workshop.latex.recipe.default": "first",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.linting.run": "onType",
    "latex-workshop.linting.chktex.exec.path": "chktex",
    "latex-workshop.latex.autoClean.run": "onFailed",
    "latex-workshop.intellisense.update.aggressive.enabled": true,
    "latex-workshop.latex.outDir": "out",
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "latex-workshop.latex.pdfWatch.delay": 0,
    "latex-workshop.latex.magic.args": [
        "-output-directory=%OUTDIR%",
        "--shell-escape",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
    ],
    "latex-workshop.latexindent.args": [
        "-c",
        "%DIR%/%OUTDIR%/",
        "%TMPFILE%",
        "-y=defaultIndent: '%INDENT%'"
    ],
    //  Notebook
    "notebook.output.textLineLimit": 200,
    "notebook.lineNumbers": "on",
    "notebook.formatOnSave.enabled": true,
    //  Python
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.autoImportCompletions": true,
    "python.languageServer": "Pylance",
    "black-formatter.args": [
        // "--skip-string-normalization",
        "--line-length",
        "180",
    ],
    "python.formatting.provider": "none",
    "python.autoComplete.extraPaths": [
        "~/.local/lib/python3.10/site-packages"
    ],
    "python.analysis.extraPaths": [
        "~/.local/lib/python3.10/site-packages"
    ],
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true
    },
    "python.analysis.completeFunctionParens": true,
    "ruff.args": [
        "--line-length=180",
        "--select",
        "ALL",
        "--ignore",
        "D",
        "ANN"
    ],
    //  Terminal
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "Hack",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.enablePersistentSessions": false,
    //  Telemetry
    "telemetry.telemetryLevel": "off",
    "redhat.telemetry.enabled": false,
    //  Security
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.enabled": false,
    "terminal.external.linuxExec": "konsole",
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.check.command": "clippy",
    "workbench.startupEditor": "none",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "shellcheck.ignorePatterns": {
        "**/*.zshrc": false
    },
    "editor.cursorSmoothCaretAnimation": "on",
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "editor.fontFamily": "'Hack Nerd Font', 'monospace', monospace",
    "editor.lineNumbers": "relative",
    "editor.occurrencesHighlight": "multiFile",
    "files.associations": {
        "config": "i3"
    },
}
